    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-tiny-virtual-list": "^2.2.0",
    "style-loader": "^3.3.2",
    "tsdx": "^0.14.1",
    "typescript": "^5.0.4"
  },
  "resolutions": {
    "prettier": "^2.2.0",
